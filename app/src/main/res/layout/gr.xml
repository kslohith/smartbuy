<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".shop1">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sri Annapoorneshawari Rice Stores"
            android:id="@+id/t1"
            android:layout_margin="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wholesale Egg shop"
            android:layout_margin="16dp"
            android:id="@+id/t2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Laxmi Rice Traders"
                android:layout_margin="16dp"
                android:id="@+id/t3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Karavali Fish Store"
                android:layout_margin="16dp"
                android:id="@+id/t4"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bangalore rice traders"
                android:layout_margin="16dp"
                android:id="@+id/t5"/>
        </TableLayout>
    </ScrollView>

